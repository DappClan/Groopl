{
  "compilerOptions": {
    "target": "es2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false, // for TypeORM entities, con: may hide real initialization
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
