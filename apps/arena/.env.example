# Hedera Network Configuration
# Options: mainnet, testnet, previewnet
NUXT_PUBLIC_HEDERA_NETWORK=testnet

# Hedera Mirror Node URL
NUXT_PUBLIC_HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# WalletConnect Project ID
# Get your project ID from https://cloud.walletconnect.com
NUXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Application Configuration
NUXT_PUBLIC_APP_NAME=Groopl Arena
NUXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration (for your backend)
NUXT_PUBLIC_API_URL=http://localhost:4000
NUXT_API_SECRET=your_api_secret_here

# Gaming Platform Configuration
NUXT_PUBLIC_MAX_PLAYERS_PER_ROOM=10
NUXT_PUBLIC_ENABLE_SPECTATOR_MODE=true

# Optional: Analytics
# NUXT_PUBLIC_ANALYTICS_ID=

# Optional: Error Tracking
# NUXT_PUBLIC_SENTRY_DSN=
